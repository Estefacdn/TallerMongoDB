<%- include('partials/_header'); %>

<div class="container">
  <div class="row">
    <!--FORM-->
    <div class="col-md-5 offset-md-3">
      <div class="card">
        <div class="card-body">
          <form action="/edit/<%= task._id %>" method="POST">

            <div class="form-group">
              <input class="form-control" type="text" name="name" placeholder="Nombre" value="<%= task.name %>">       
            </div>

            <div class="form-group">
              <input class="form-control" type="text" name="email" placeholder="email" value="<%= task.email %>">
            </div>

            <div class="form-group">
              <input class="form-control" type="text" name="rol" placeholder="rol" value="<%= task.rol %>">
            </div>
         
            <button class="btn btn-primary" type="submit">
              Actualizar 
            </button>
            
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include ('partials/_footer'); %>